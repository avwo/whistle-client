{
  "name": "Whistle",
  "version": "1.4.0",
  "description": "Whistle Web Debugging Proxy",
  "main": "./lib/index.js",
  "author": "avenwu <avwu@qq.com>",
  "scripts": {
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --linux",
    "build:linux": "electron-builder --linux",
    "release:win": "electron-builder --win --x64 -p always",
    "release:mac": "electron-builder --mac --linux -p always",
    "release:linux": "electron-builder --linux -p always",
    "lint": "eslint --fix lib",
    "lintfix": "npm run lint",
    "start": "electron ./lib"
  },
  "build": {
    "productName": "Whistle",
    "appId": "whistle.client",
    "asar": false,
    "artifactName": "${productName}-v${version}-${os}-${arch}.${ext}",
    "copyright": "avenwu",
    "compression": "normal",
    "extends": null,
    "publish": [
      {
        "provider": "github",
        "owner": "avwo",
        "repo": "whistle-client",
        "releaseType": "draft"
      }
    ],
    "protocols": [
      {
        "name": "whistle",
        "schemes": [
          "whistle"
        ]
      }
    ],
    "mac": {
      "icon": "public/dock.png",
      "target": {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    },
    "win": {
      "icon": "public/whistle.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "public/whistle.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh"
    }
  },
  "devDependencies": {
    "electron": "~25.9.8",
    "electron-builder": "^24.4.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "find-bar": "^0.1.3",
    "fs-extra": "^11.1.1",
    "npminstall": "^7.9.0",
    "sudo-prompt": "^9.2.1",
    "whistle": "^2.9.102",
    "whistle.proxyauth": "^1.1.5"
  }
}
